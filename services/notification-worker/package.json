{
  "name": "@syntra/notification-worker",
  "version": "0.1.0",
  "private": true,
  "description": "Syntra Notification Worker - Standalone service for delivering notifications via email, Slack, Discord, PagerDuty, and webhooks",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --onSuccess 'node dist/index.js'",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "bullmq": "^5.1.0",
    "drizzle-orm": "^0.29.0",
    "ioredis": "^5.3.0",
    "postgres": "^3.4.0",
    "resend": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
